{
  "compilerOptions": {
    "target": "ES2022",
    "module": "Node16",
    "rootDir": "./src",
    "declaration": true,
    "declarationMap": true,
    "outDir": "./lib",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "Node16"
  },
  "include": ["src"],
  "exclude": ["node_modules", "lib"]
}
